<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" spacing="8">
    <children>
        <HBox spacing="8">
            <children>
                <DatePicker promptText="From"/>
                <DatePicker promptText="To"/>
                <Button text="Filter"/>
            </children>
        </HBox>
        <TableView VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn text="Txn ID" prefWidth="140"/>
                <TableColumn text="Date" prefWidth="160"/>
                <TableColumn text="Amount" prefWidth="160"/>
                <TableColumn text="Method" prefWidth="160"/>
                <TableColumn text="Status" prefWidth="160"/>
            </columns>
        </TableView>
    </children>
    <padding><Insets top="12" left="12" right="12" bottom="12"/></padding>
</VBox>
