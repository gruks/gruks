<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" spacing="8">
    <children>
        <HBox spacing="8">
            <children>
                <DatePicker promptText="From"/>
                <DatePicker promptText="To"/>
                <ChoiceBox/>
                <Button text="Export"/>
            </children>
        </HBox>
        <TableView VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn text="Report" prefWidth="240"/>
                <TableColumn text="Value" prefWidth="240"/>
            </columns>
        </TableView>
    </children>
    <padding><Insets top="12" left="12" right="12" bottom="12"/></padding>
</VBox>
